<script>
	$(document).ready(() => {
		const requirements = <%=raw @requirements.to_json %>;
		const pr = <%= @project_rate %>;

		requirements.map(r => {
			$(`#start_requirement_${r.id}`).click((event) => {
				event.preventDefault();
				console.log(r.id, r.expected_time * pr);
				const reqId = r.id;
				const payment_amount = r.expected_time * pr;
				window.App.handleStartRequirement(reqId, payment_amount);
				// window.App.startRequirement(payment_amount);
			});
		});
	});
</script>
